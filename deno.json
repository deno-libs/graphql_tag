{
  "name": "@deno-libs/graphql-tag",
  "version": "0.1.3",
  "exports": "./mod.ts",
  "exclude": [".claude", ".github", ".vscode", "coverage"],
  "lint": {
    "include": ["./**/*.ts"],
    "exclude": ["./**/*.js"]
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false,
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 120
  },
  "tasks": {
    "test": "deno test --no-check --allow-net --allow-read --allow-write --allow-env --coverage=coverage",
    "cov": "deno coverage coverage --lcov > coverage.lcov"
  }
}
